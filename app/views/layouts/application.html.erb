<!DOCTYPE html>
<html>
<head>
	<%= analytics_init if Rails.env.production? %>
  <title>Guidelines for Me</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="navbar-inner">
		
				<%= link_to "Guidelines", guidelines_path, :class => 'brand' %>
				
				<ul class="nav">
					
					
					<li class="<%= 'active' if current_page?(guidelines_list_path) %>"><%= link_to "By Topic", guidelines_list_path %></li>
					<li class="<%= 'active' if current_page?(guidelines_listhospital_path) %>"><%= link_to "By Hospital", guidelines_listhospital_path %></li>
					<li class="<%= 'active' if current_page?(guidelines_listhospital_path) %>"><%= link_to "Favourites", favourites_show_path %></li>
					
				</ul>
				<ul class="nav pull-right">
					<li class="<%= 'active' if current_page?(about_path) %>"><%= link_to "About us", about_path %></li>

					<% if user_signed_in? %>
					<li class="<%= 'active' if current_page?(edit_path) %>"><%= link_to current_user.first_name + "'s Profile", edit_path %></li>
					<li> <%= link_to "Log out", logout_path %></li>
					<% else %>
					<li><%= link_to "Register", register_path %></li>
					<li><%= link_to "Log in", login_path %></li>
					<% end %>
				</ul>
		
		</div>
	</div>

	<div class="container">
		<% flash.each do |type, message| %>
			<div class="alert <%= flash_class type %>">
				<button class="close" data-dismiss="alert">x</button>
				<%= message %>
	</div>
		<% end %>
		

		<%= yield %>

	</div>
</body>
</html>
